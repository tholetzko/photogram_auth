<div class="page-header">
  
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/photos/new" class="btn btn-default btn-block">
      <i class="fa fa-plus"></i>
    </a>
    <hr>
  </div>
</div>


<% @photos.each do |photo| %>

<div class="row">

  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/users/<%= photo.user_id %>"><%= photo.user.username %></a>
          <small>
            <%= time_ago_in_words(photo.created_at)%>
          </small>
        </h3>
      </div>

      <div class="panel-body">
        <a href="/photos/<%= photo.id %>">
          <img src="<%= photo.image %>" class="img-responsive">
        </a>

        <p>
          <form action="/create_like" method="post">
            <!-- Hidden input for authenticity token to protect from forgery -->
            <input name="authenticity_token" type="hidden" value="qjnV5XNKUysebZkgnBHFjoEl1TjEALu72lKf0V3leOW2tl0KacVUDJGUhHPsbqfAuF7bEgVVTb77rNZ/quQgZA==">

            <input type="hidden" name="photo_id" value="100">

            <input type="hidden" name="user_id" value="1">

            <button class="btn btn-link">
              <i class="fa fa-heart-o"></i>
            </button>

            <small class="text-muted">be the first to like this</small>
          </form>
        </p>

        <ul class="media-list">

          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <a href="/users/<%= photo.user.username %>"><%= photo.comments %></a>
                <small>
                  test
                </small>
              </h6>
              sddf
            </div>
          </li>



          <li class="media">
            <div class="media-body">
              <form action="/create_comment" method="post">
                <!-- Hidden input for authenticity token to protect from forgery -->
                <input name="authenticity_token" type="hidden" value="g5oT1ZIvmi3i7gIorOrF9A4E/1wy3J4xzqz4qQWI4lmfFZs6iKCdCm0XH3vclae6N3/xdvOJaDTvUrEH8om62A==">

                <input type="hidden" name="photo_id" value="100">

                <input type="hidden" name="user_id" value="1">

                <!-- Label and input for body -->
                <div class="form-group">
                  <label for="body" class="sr-only">
                    Body
                  </label>

                  <div class="input-group">
                    <input type="text" id="body" name="body" class="form-control" placeholder="Add a comment..." required>

                    <span class="input-group-btn">
                      <button class="btn btn-default" type="submit">
                        <i class="fa fa-commenting-o"></i>
                      </button>
                    </span>
                  </div><!-- /input-group -->
                </div>
              </form>
            </div>
          </li>
        </ul>
        <div class="btn-group btn-group-justified">
          <a href="/photos" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
